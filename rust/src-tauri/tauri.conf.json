{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Windows Resource Monitor",
  "version": "1.0.0",
  "identifier": "com.simonsun.resource-monitor",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Windows Resource Monitor",
        "width": 300,
        "height": 650,
        "minWidth": 300,
        "minHeight": 450,
        "decorations": false,
        "transparent": true,
        "resizable": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}